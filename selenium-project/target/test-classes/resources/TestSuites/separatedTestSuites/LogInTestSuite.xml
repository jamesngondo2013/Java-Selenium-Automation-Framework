<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="LogInTestSuite" verbose="1" parallel="tests" thread-count="4">
	
	<test name="positivelogInTest">
		<classes>
			<class name="com.james.training.selenium_project.loginpagetests.PositiveLoginTest" />
		</classes>
		
	</test>
	
	<test name="negativeUsernameTest">
		<parameter name="username" value="incorrectUsername"></parameter>
		<parameter name="password" value="SuperSecretPassword!"></parameter>
		<parameter name="expectedMessage" value="Your username is invalid!"></parameter>
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.james.training.selenium_project.loginpagetests.NegativeLoginTests" />
		</classes>
		
	</test>
	
	<test name="negativeUsernameTest_FF">
		<parameter name="username" value="incorrectUsername"></parameter>
		<parameter name="password" value="SuperSecretPassword!"></parameter>
		<parameter name="expectedMessage" value="Your username is invalid!"></parameter>
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.james.training.selenium_project.loginpagetests.NegativeLoginTests" />
		</classes>
		
	</test>
	
</suite>
